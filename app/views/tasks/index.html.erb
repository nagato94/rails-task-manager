<div class="container mt-5">
  <h1 class="mb-4">My Tasks</h1>

  <% @tasks.each do |task| %>
    <div class="d-flex align-items-center mb-2 m-2">
      <div class="m-1 gap-10 d-flex align-items-center">
        <% if task.completed? %>
          <i class="fa-solid fa-list-check text-success me-2"></i>
        <% else %>
          <i class="fa-solid fa-list-check text-secondary me-2"></i>
        <% end %>
        <%= link_to task.title, task_path(task), class: 'text-dark' %>
      </div>
    </div>
  <% end %>

  <%= link_to "Add New Task", new_task_path, class: 'btn btn-primary' %>
</div>
