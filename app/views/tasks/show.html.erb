<div class="container mt-5 shadow p-3 mb-5 bg-white rounded">
  <div class="card border-0">
    <div class="card-body">
      <h2 class="card-title"><%= @task.title %></h2>
      <p class="card-text"><%= @task.details %></p>
      <div class="form-check">
        <input type="checkbox" class="form-check-input" id="completedCheckbox" <%= 'checked' if @task.completed? %>>
        <label class="form-check-label" for="completedCheckbox">
          <%= @task.completed? ? 'Task complete' : 'Task not complete' %>
        </label>
      </div>
    </div>
  </div>

  <div class="mt-3 gap-10 shadow p-3 mb-5 bg-white rounded">
    <%= link_to 'Back', tasks_path, class: 'btn btn-primary' %>
    <%= link_to 'Edit', edit_task_path(@task), class: 'btn btn-warning' %>
    <%= link_to 'delete', task_path(@task),
  data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' },
  class: 'btn btn-danger' %>
  </div>
</div>
